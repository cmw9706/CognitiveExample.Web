@using CognitiveExample.Web.Models.CognitiveEntities
@model AnalysisViewModel 

<div class="container">
    <div class="row">
        <div class="col-md-7">
            <h2> @Model.Username</h2>
        </div>
    </div>

    @foreach (var feeling in Model.AnalysisResults)
    {
        @if (feeling.Attitude.Equals(Attitude.Positive))
        {
            <div class="panel panel-success">
                <div class="panel-heading">Positive Tweet</div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-7">
                            <b>Tweet</b>
                            <br />
                            @feeling.Tweet
                        </div>
                        <div class="col-md-3">
                            <b>Key Phrases</b>
                            @foreach (var phrase in feeling.KeyPhrases)
                            {
                                <div>
                                    @phrase
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="panel panel-danger">
                <div class="panel-heading">Negative Tweet</div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-7">
                            <b>Tweet</b>
                            <br />
                            @feeling.Tweet
                        </div>
                        <div class="col-md-3">
                            <b>Key Phrases</b>
                            @foreach (var phrase in feeling.KeyPhrases)
                            {
                                <div>
                                    @phrase
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    }

</div>